				include ./_includes/_layout/_aside.jade
				.catalog-content-wrap
					.breadcrumbs
						ul.breadcrumbs__list
							li.breadcrumbs__item
								a.breadcrumbs__link(href="#") Главная
							li.breadcrumbs__item
								a.breadcrumbs__link(href="#") О компании	
							li.breadcrumbs__item
								a.breadcrumbs__link.breadcrumbs__link_active(href="#") Оплата и доставка
					include ./_includes/_layout/_about_company_nav.jade
