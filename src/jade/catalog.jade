extends _layout.jade
block main
	.container__catalog-wrap
		.container__catalog
			.accordion-wrap
				ul.accordion__list
					-var nameAssort = ['Новинки', 'Акционные товары', 'Бумажно-беловые офисные товары', 'Бумажно-беловые школьные товары', 'Ручки и стержни', 'Письменные пренадлежности', 'Конторские принадлежности', 'Школьные товары', 'Офисные принадлежности', 'Глобусы','Папки и регистраторы','Деловая кожгалантерея', 'Товары для праздника', 'Подарки и сувениры', 'Новогодние товары', 'Хозяйствинные товары'];
					-var nameAssortList = ['Universal', 'Pilot', 'Представительские', 'Перьевые', 'Гелевые', 'Гелевые Crown', 'Шариковые и стержни', 'Parker', 'ErichKrause', 'Союз' ]
					each item in nameAssort
						if item == 'Новинки'
							li.accordion__item
								a.accordion__link.accordion__link_news(href='#') #{item}
						else if item == 'Акционные товары'
							li.accordion__item
								a.accordion__link.accordion__link_discount(href='#') #{item}
						else if item == 'Ручки и стержни'
							li.accordion__item
								a.accordion__link.accordion__link_active(href='#') #{item}
								ul.accordion-item__list
									each i in nameAssortList
										li.accordion-item__item
											a.accordion-item__link(href='#') #{i}
						else
							li.accordion__item
								a.accordion__link(href='#') #{item}
			.catalog-content-wrap
				.breadcrumbs
					ul.breadcrumbs__list
						li.breadcrumbs__item
							a.breadcrumbs__link(href='#') Главная
						li.breadcrumbs__item
							a.breadcrumbs__link.breadcrumbs__link_active(href='#') Каталог
				h2.__title Все товары
				ul.catalog-wrap.catalog-block-style
					-for (var j=1;j<=7;j++)
						if j%2==0
							li.catalog-product-wrap
								.product-image-wrap
									img.product-image(src='img/product-images/product1.jpg' alt='Блокнот «Животные»')
									.product-status.product-status_new Новинка
								.product-text-wrap
									a.product-title(href='kartochka.html' alt='Блокнот «Животные»') Блокнот «Животные»
									.product-text  Упаковка: 10 шт.
								.product-price-line-wrap
									.product-price-wrap
										.product-price 100
										.product-price-per руб./шт.
									p.product__stock-status.product__stock-status_expected  Ожидается
								.product-order-wrap
									form.product__amount
										span.minus
										input.input(type='text', value='1')
										span.plus
									a.product-add(href='#' alt='Добавить в корзину')| Добавить
						else
							li.catalog-product-wrap
								.product-image-wrap
									img.product-image(src='img/product-images/product2.jpg' alt='Блокнот «Животные»')
									.product-status.product-status_discount Акция
								.product-text-wrap
									a.product-title(href='kartochka.html' alt='Блокнот «Животные»') Блокнот «Животные»
									.product-text  Упаковка: 10 шт.
								.product-price-line-wrap
									.product-price-wrap
										.product-price 100
										.product-price-per руб./шт.
									p.product__stock-status.product__stock-status_available  В наличии
								.product-order-wrap
									form.product__amount
										span.minus
										input.input(type='text', value='1')
										span.plus
									a.product-add(href='#' alt='Добавить в корзину')| Добавить

